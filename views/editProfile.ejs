    <form
      method="POST"
      enctype="multipart/form-data"
      class="xl:w-1/3 w-96 mx-auto transition-all lg:px-10 px-0 bg-white rounded-xl py-8 border mt-8"
    >
      <p
        class="transition-all drop-shadow-md text-transparent bg-clip-text bg-gradient-to-r from-violet-400 to-pink-400 font-bold md:text-3xl text-2xl w-fit mx-auto mb-3"
      >
        Edit Profile
      </p>
      <script>
        var picCount = 1;
        var defaultPic = true;

        function preview() {
          pfp.src = URL.createObjectURL(event.target.files[0]);
          defaultPic = false;
          pfp_default.value = 100
        }
        function previous() {
          if (picCount - 1 >= 1) {
            picCount -= 1;
          }
          defaultPic = true;
          pfp.src = `https://res.cloudinary.com/dxetj5koj/image/upload/v1739449578/CloudinaryDemo/${picCount}.png`;
          pfp_default.value = picCount
        }
        function next() {
          if (picCount + 1 <= 11) {
            picCount += 1;
          }
          defaultPic = true;
          pfp.src = `https://res.cloudinary.com/dxetj5koj/image/upload/v1739449578/CloudinaryDemo/${picCount}.png`;
          pfp_default.value = picCount
        }
      </script>

      <input type="hidden" name="pfp_default" id="pfp_default" value="1" />

      <div class="mx-8 mt-5 gap-3 text-sm w-fit">
        <div class="flex gap-3 w-fit items-center">
          <div class="flex-1 justify-end flex">
            <button onclick="previous()" type="button">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-8 md:size-9 flex-1 stroke-blue-400 stroke-2 hover:scale-150 transition-all hover:fill-blue-400 hover:stroke-white"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                />
              </svg>
            </button>
          </div>

          <div class="w-1/3 mx-auto">
            <img
              id="pfp"
              src="<%= profile.img %>"
              alt=""
              class="rounded-xl h-full hover:scale-105 transition-all"
            />
          </div>

          <div class="flex-1 flex">
            <button onclick="next()" type="button">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-8 md:size-9 flex-1 stroke-blue-400 stroke-2 hover:scale-150 transition-all hover:fill-blue-400 hover:stroke-white"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="m12.75 15 3-3m0 0-3-3m3 3h-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                />
              </svg>
            </button>
          </div>
        </div>

        <div class="w-fit mx-auto">
          <input
            onchange="preview()"
            class="transition-all text-xs w-48 text-center md:text-sm file:mr-2 file:active:bg-neutral-200 file:bg-neutral-100 file:border file:border-neutral-200 file:rounded-lg file:cursor-pointer file:text-neutral-400 mt-3 font-semibold text-neutral-500 group"
            title="profile"
            type="file"
            name="image"
            accept="image/png, image/jpeg"
          />
        </div>

        <div class="flex flex-col flex-1 mt-10 gap-0.5">
          <label
            for="username"
            class="font-semibold text-neutral-400 text-xs md:text-sm transition-all"
            >Username</label
          >
          <input
            value="<%= profile.username %>"
            disabled
            required
            type="text"
            name="username"
            id="username"
            class="text-xs md:text-sm w-full bg-neutral-50 px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-2 focus:ring-neutral-300 border-neutral-100 font-medium text-neutral-500 active:bg-neutral-300/50 hover:bg-neutral-100 hover:border-neutral-200 transition-all"
          />
          <label
            for="nickname"
            class="font-semibold text-neutral-400 mt-1 text-xs md:text-sm transition-all"
            >Nickname</label
          >
          <input
            value="<%= profile.nickname %>"
            required
            type="text"
            name="nickname"
            id="nickname"
            class="text-xs md:text-sm bg-neutral-50 w-full px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-2 focus:ring-neutral-300 border-neutral-100 font-medium text-neutral-500 active:bg-neutral-300/50 hover:bg-neutral-100 hover:border-neutral-200 transition-all"
          />
          <label
            for="name"
            class="font-semibold text-neutral-400 mt-1 text-xs md:text-sm transition-all"
            >Name</label
          >
          <input
            value="<%= profile.name %>"
            required
            type="text"
            name="name"
            id="name"
            class="text-xs md:text-sm bg-neutral-50 w-full px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-2 focus:ring-neutral-300 border-neutral-100 font-medium text-neutral-500 active:bg-neutral-300/50 hover:bg-neutral-100 hover:border-neutral-200 transition-all"
          />
          <label
            for="birthday"
            class="font-semibold text-neutral-400 mt-1 text-xs md:text-sm transition-all"
            >Birthday</label
          >
          <input value="<%=
          profile.birthday.getFullYear()+"-"+String(profile.birthday.getMonth()+1).padStart(2,
          "0")+"-"+profile.birthday.getDate() %>" required type="date"
          name="birthday" id="birthday" class="text-xs md:text-sm bg-neutral-50
          w-full px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-2
          focus:ring-neutral-300 border-neutral-100 font-medium text-neutral-500
          active:bg-neutral-300/50 hover:bg-neutral-100 hover:border-neutral-200
          transition-all" />
        </div>
      </div>

      <div class="md:mt-8 mt-6">
        <div
          class="text-sm md:text-base w-fit mx-auto bg-orange-100 px-5 py-1 text-orange-400 font-semibold transition-all rounded-full flex items-center gap-1 hover:bg-yellow-200 hover:text-yellow-500 hover:border-yellow-400 active:bg-yellow-400 active:border-yellow-500 active:text-white"
        >
          Contact Info
        </div>
        <div
          class="flex flex-col text-sm mx-5 px-5 mt-3 py-3 bg-orange-50 rounded-xl border border-orange-200 gap-0.5"
        >
          <label
            for="contact"
            class="font-semibold text-orange-400 text-xs md:text-sm transition-all"
            >Contact Number</label
          >
          <input
            value="<%= profile.contact_number %>"
            type="number"
            name="contact"
            id="contact"
            class="text-xs md:text-sm w-full bg-orange-100 px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-1 focus:ring-orange-300 font-medium text-neutral-500 active:bg-orange-300/50 hover:bg-orange-200 hover:border-orange-300 border-orange-200 transition-all"
          />
          <label
            for="email"
            class="font-semibold text-orange-400 mt-1 text-xs md:text-sm transition-all"
            >Email</label
          >
          <input
            value="<%= profile.email %>"
            type="text"
            name="email"
            id="email"
            class="text-xs md:text-sm bg-orange-100 w-full px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-1 focus:ring-orange-300 font-medium text-neutral-500 active:bg-orange-300/50 hover:bg-orange-200 hover:border-orange-300 border-orange-200 transition-all"
          />
          <label
            for="address"
            class="font-semibold text-orange-400 mt-1 text-xs md:text-sm transition-all"
            >Address</label
          >
          <input
            value="<%= profile.address %>"
            type="text"
            name="address"
            id="address"
            class="text-xs md:text-sm bg-orange-100 w-full px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-1 focus:ring-orange-300 font-medium text-neutral-500 active:bg-orange-300/50 hover:bg-orange-200 hover:border-orange-300 border-orange-200 transition-all"
          />
        </div>
      </div>

      <div class="md:mt-8 mt-6">
        <div
          class="text-sm md:text-base w-fit mx-auto bg-purple-100 px-5 py-1 text-purple-400 font-semibold transition-all rounded-full flex items-center gap-1 hover:bg-pink-200 hover:text-pink-500 hover:border-pink-400 active:bg-pink-400 active:border-pink-500 active:text-white"
        >
          Personal Details
        </div>
        <div
          class="flex flex-col text-sm mx-5 px-5 mt-3 py-3 bg-purple-50 rounded-xl border border-purple-200 gap-0.5"
        >
          <label
            for="hobbies"
            class="font-semibold text-purple-400 text-xs md:text-sm transition-all"
            >Hobbies</label
          >
          <input
            value="<%= profile.hobbies %>"
            type="text"
            name="hobbies"
            id="hobbies"
            class="text-xs md:text-sm w-full bg-purple-100 px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-1 focus:ring-purple-300 font-medium text-neutral-500 active:bg-purple-300/50 hover:bg-purple-200 hover:border-purple-300 border-purple-200 transition-all"
          />
          <label
            for="dream"
            class="font-semibold text-purple-400 mt-1 text-xs md:text-sm transition-all"
            >Dream</label
          >
          <input
            value="<%= profile.dream %>"
            type="text"
            name="dream"
            id="dream"
            class="text-xs md:text-sm bg-purple-100 w-full px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-1 focus:ring-purple-300 font-medium text-neutral-500 active:bg-purple-300/50 hover:bg-purple-200 hover:border-purple-300 border-purple-200 transition-all"
          />
          <label
            for="likes"
            class="font-semibold text-purple-400 mt-1 text-xs md:text-sm transition-all"
            >Likes</label
          >
          <input
            value="<%= profile.likes %>"
            type="text"
            name="likes"
            id="likes"
            class="text-xs md:text-sm bg-purple-100 w-full px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-1 focus:ring-purple-300 font-medium text-neutral-500 active:bg-purple-300/50 hover:bg-purple-200 hover:border-purple-300 border-purple-200 transition-all"
          />
          <label
            for="dislikes"
            class="font-semibold text-purple-400 mt-1 text-xs md:text-sm transition-all"
            >Dislikes</label
          >
          <input
            value="<%= profile.dislikes %>"
            type="text"
            name="dislikes"
            id="dislikes"
            class="text-xs md:text-sm bg-purple-100 w-full px-2 py-0.5 rounded-lg border-2 outline-none focus:ring-1 focus:ring-purple-300 font-medium text-neutral-500 active:bg-purple-300/50 hover:bg-purple-200 hover:border-purple-300 border-purple-200 transition-all"
          />
        </div>
      </div>

      <button
        type="submit"
        class="text-lg md:text-xl hover:bg-violet-500/90 hover:shadow-violet-500/50 active:bg-violet-500/80 hover:scale-105 transition-all flex items-center gap-3 mt-5 bg-violet-400 w-fit mx-auto font-semibold text-white px-4 py-1 rounded-lg shadow-md shadow-violet-500/20"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6 stroke-2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
          />
        </svg>

        Submit
      </button>
    </form>
