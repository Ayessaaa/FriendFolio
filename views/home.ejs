      <p class="text-neutral-400 font-medium md:text-sm text-xs transition-all text-center mt-1">Which birthday is coming next? Be sure to greet them!</p>


      <%
        const sortBySoonest = function (events) {
          const currentDate = new Date()
          return events.sort(function (a, b) {
            let dateA = new Date((a.birthday.getMonth()+1)+"-"+a.birthday.getDate()+"-"+currentDate.getFullYear())
            let dateB = new Date((b.birthday.getMonth()+1)+"-"+b.birthday.getDate()+"-"+currentDate.getFullYear())
            // Move all the dates that are in the past to the end of the array
            if (dateA < currentDate || dateB < currentDate) {
                return -1;
            }
            // Order by soonest
            return dateA - dateB;
          });
        }

        for (let i = 0; i < friends.length; i++) {
          const element = friends[i];

          if(element.birthday === null){
            friends.splice(i, 1);
          }
          
        }

        friends = friends.filter(item => item.birthday !== null)
        friends = friends.filter(item => new Date((item.birthday.getMonth()+1)+"-"+item.birthday.getDate()+"-"+new Date().getFullYear()) > new Date())

        friends = sortBySoonest(friends)

        

      %>

