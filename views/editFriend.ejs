    <title>Yessa - FriendFolio</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://cloud-dl6zn5vpz-hack-club-bot.vercel.app/0logo.png"
    />

    <style>
      body {
        font-family: "Poppins";
      }
    </style>
  </head>
  <body
    class="bg-gradient-to-r from-violet-100 via-purple-50 to-pink-100 bg-no-repeat bg-fixed transition-all px-0 lg:px-16 py-10"
  >
    <div class="grid grid-cols-3 w-full h-fit px-16 lg:px-0">
      <div
        class="group w-fit flex items-center flex-row col-span-3 lg:col-span-1 mx-auto lg:mx-0 transition-all"
      >
        <div
          class="mr-3 bg-violet-400 p-1 w-fit mx-auto rounded-lg shadow-sm group group-hover:bg-orange-400 transition-all hover:shadow-md hover:shadow-orange-500/50"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="size-6 stroke-2 mx-auto stroke-white fill-violet-300 group-hover:stroke-white group-hover:fill-orange-300 transition-all delay-75 group-hover:scale-105"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3.75 9.776c.112-.017.227-.026.344-.026h15.812c.117 0 .232.009.344.026m-16.5 0a2.25 2.25 0 0 0-1.883 2.542l.857 6a2.25 2.25 0 0 0 2.227 1.932H19.05a2.25 2.25 0 0 0 2.227-1.932l.857-6a2.25 2.25 0 0 0-1.883-2.542m-16.5 0V6A2.25 2.25 0 0 1 6 3.75h3.879a1.5 1.5 0 0 1 1.06.44l2.122 2.12a1.5 1.5 0 0 0 1.06.44H18A2.25 2.25 0 0 1 20.25 9v.776"
            />
          </svg>
        </div>

        <p class="font-bold text-4xl text-center drop-shadow-md w-fit mx-auto">
          <span
            class="bg-gradient-to-r from-violet-400 to-pink-400 bg-clip-text text-transparent"
            >Friend</span
          ><span
            class="bg-gradient-to-r from-orange-400 to-yellow-400 bg-clip-text text-transparent"
            >Folio</span
          >
        </p>
        <!-- <p
        class="font-medium text-lg text-center cursor-default delay-150 text-neutral-400 group-hover:bg-violet-400 group-hover:text-white group-hover:shadow-violet-500/50 w-fit mx-auto group-hover:mt-1 group-hover:mb-10 mb-11 duration-300 px-5 rounded-full group-hover:shadow-md py-0.5 group-hover:text-lg transition-all"
      >
        never forget a birthday again !
      </p> -->
      </div>
      <div
        class="bg-white rounded-full w-fit px-2 py-2 flex gap-2 col-span-3 lg:col-span-1 mt-8 lg:mt-0 mx-auto"
      >
        <button
          onclick="window.location.href = '/home'"
          title="home"
          class="flex items-center h-full w-fit px-3 py-1 rounded-full gap-2 hover:bg-violet-200 transition-all active:bg-violet-400 group"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="size-5 text-violet-400 group-active:text-white"
          >
            <path
              fill-rule="evenodd"
              d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z"
              clip-rule="evenodd"
            />
          </svg>
        </button>
        <button
          onclick="window.location.href = '/friends'"
          title="friends"
          class="flex items-center h-full w-fit group bg-pink-400 px-3 py-1 rounded-full gap-2 shadow-md shadow-pink-500/50 hover:bg-pink-500/80 transition-all active:bg-pink-200"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="size-5 text-white group-active:text-pink-400"
          >
            <path
              d="M10 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM6 8a2 2 0 1 1-4 0 2 2 0 0 1 4 0ZM1.49 15.326a.78.78 0 0 1-.358-.442 3 3 0 0 1 4.308-3.516 6.484 6.484 0 0 0-1.905 3.959c-.023.222-.014.442.025.654a4.97 4.97 0 0 1-2.07-.655ZM16.44 15.98a4.97 4.97 0 0 0 2.07-.654.78.78 0 0 0 .357-.442 3 3 0 0 0-4.308-3.517 6.484 6.484 0 0 1 1.907 3.96 2.32 2.32 0 0 1-.026.654ZM18 8a2 2 0 1 1-4 0 2 2 0 0 1 4 0ZM5.304 16.19a.844.844 0 0 1-.277-.71 5 5 0 0 1 9.947 0 .843.843 0 0 1-.277.71A6.975 6.975 0 0 1 10 18a6.974 6.974 0 0 1-4.696-1.81Z"
            />
          </svg>
          <p class="font-medium text-white group-active:text-pink-400">
            Friends
          </p>
        </button>
        <button
          onclick="window.location.href = '/polariods'"
          title="polariods"
          class="flex items-center h-full w-fit px-3 py-1 rounded-full gap-2 hover:bg-orange-200 transition-all active:bg-orange-400 group"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="size-5 text-orange-400 group-active:text-white"
          >
            <path
              fill-rule="evenodd"
              d="M1 5.25A2.25 2.25 0 0 1 3.25 3h13.5A2.25 2.25 0 0 1 19 5.25v9.5A2.25 2.25 0 0 1 16.75 17H3.25A2.25 2.25 0 0 1 1 14.75v-9.5Zm1.5 5.81v3.69c0 .414.336.75.75.75h13.5a.75.75 0 0 0 .75-.75v-2.69l-2.22-2.219a.75.75 0 0 0-1.06 0l-1.91 1.909.47.47a.75.75 0 1 1-1.06 1.06L6.53 8.091a.75.75 0 0 0-1.06 0l-2.97 2.97ZM12 7a1 1 0 1 1-2 0 1 1 0 0 1 2 0Z"
              clip-rule="evenodd"
            />
          </svg>
        </button>
        <button
          onclick="window.location.href = '/gift-select'"
          title="gift"
          class="flex items-center h-full w-fit px-3 py-1 rounded-full gap-2 hover:bg-indigo-200 transition-all active:bg-indigo-400 group"
        >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" 
          class="size-5 text-indigo-400 group-active:text-white">
          <path fill-rule="evenodd" d="M14 6a2.5 2.5 0 0 0-4-3 2.5 2.5 0 0 0-4 3H3.25C2.56 6 2 6.56 2 7.25v.5C2 8.44 2.56 9 3.25 9h6V6h1.5v3h6C17.44 9 18 8.44 18 7.75v-.5C18 6.56 17.44 6 16.75 6H14Zm-1-1.5a1 1 0 0 1-1 1h-1v-1a1 1 0 1 1 2 0Zm-6 0a1 1 0 0 0 1 1h1v-1a1 1 0 0 0-2 0Z" clip-rule="evenodd" />
          <path d="M9.25 10.5H3v4.75A2.75 2.75 0 0 0 5.75 18h3.5v-7.5ZM10.75 18v-7.5H17v4.75A2.75 2.75 0 0 1 14.25 18h-3.5Z" />
        </svg>
        </button>
      </div>
      <div class="flex items-center justify-end  mt-5 lg:mt-0 lg:mx-0 mx-auto lg:col-span-1 col-span-3">
        <a
          href="/logout"
          class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-yellow-400 font-bold  lg:text-lg text-base drop-shadow-sm"
        >
          Log Out
        </a>
      </div>
    </div>


    <form class="xl:w-2/3 2xl:1/2 mx-auto mt-10 transition-all px-10 lg:px-0" method="POST" enctype="multipart/form-data" action="/edit-friend/<%= friend.id %>">
      <p
        class="text-transparent bg-clip-text bg-gradient-to-r from-violet-400 to-pink-400 font-bold text-3xl w-fit"
      >
        Edit Friend Profile
      </p>
      <script>
        function preview() {
          pfp.src = URL.createObjectURL(event.target.files[0]);
        }
      </script>
      <div class="flex flex-col mt-5 gap-3 px-5">
        <div class="flex gap-2 mx-auto w-full flex-col md:flex-row">
          <div
            class="py-5 px-5 bg-gradient-to-r from-violet-200 w-full via-purple-100 to-pink-200 rounded-xl flex border-neutral-100 hover:shadow-md transition-all flex-1"
          >
            <img src="<%=friend.img%>" alt="" class="w-20 rounded-lg" id="pfp" />
            
            <div class="leading-tight flex-col flex shrink">
              <input name="nickname" class="outline-0 focus:ring-2 focus:ring-violet-300 active:bg-white transition-all w-40 font-semibold ml-3 text-neutral-800 text-xl px-1 bg-neutral-50/70 rounded-lg hover:bg-neutral-50/90" value="<%= friend.nickname %>"/>
              <input name="name" class=" outline-0 focus:ring-2 focus:bg-white/60 focus:ring-violet-300 active:bg-white transition-all  w-40 font-medium ml-3 text-neutral-600 text-sm px-1 bg-neutral-50/40 rounded-md mt-1" value="<%= friend.name %>">
              <input
                onchange="preview()"
                class="transition-all text-xs ml-3 file:mr-2 file:hover:text-violet-400 file:active:bg-violet-200 file:hover:bg-violet-100 file:hover:border-violet-300 file:bg-neutral-100 file:border file:border-neutral-200 file:rounded-lg file:cursor-pointer file:text-neutral-400 mt-2 font-semibold text-neutral-500 group"
                title="profile"
                type="file"
                name="image"
                accept="image/png, image/jpeg"
              />
            </div>
            <div class="flex-1">
              <div class="w-fit ml-auto">
                <button
                  type="submit"
                  title="submit"
                  class="active:bg-green-100 active:text-green-400 p-1 rounded-md bg-white border border-neutral-200 hover:bg-green-400 transition-all text-green-400 hover:text-white hover:border-green-400 hover:shadow-md hover:shadow-green-500/30"
                >
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-5">
                  <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14Zm3.844-8.791a.75.75 0 0 0-1.188-.918l-3.7 4.79-1.649-1.833a.75.75 0 1 0-1.114 1.004l2.25 2.5a.75.75 0 0 0 1.15-.043l4.25-5.5Z" clip-rule="evenodd" />
                </svg>
                
                </svg>
                
                </button>
              </div>
            </div>
          </div>

          <div class="flex gap-2">
            <div
              class=" rounded-xl w-full  bg-violet-300 font-bold text-white flex-col flex items-center justify-center w-34 group hover:bg-violet-400/70 transition-all hover:shadow-md hover:shadow-violet-500/30"
            >
            
              <p
                class="top-0 bg-violet-400/70 basis-5/12 px-3 py-3 rounded-t-xl text-xl text-violet-600/80 w-full text-center drop-shadow-md group-hover:bg-violet-500/50 transition-all group-hover:text-violet-600"
              >
              
              Birthday
              </p>
              <div class="flex-1 px-3 flex items-center py-4">

                <input value="<%= friend.birthday ? (friend.birthday.getFullYear())+"-"+String(friend.birthday.getMonth()+1).padStart(2, "0")+"-"+String(friend.birthday.getDate()).padStart(2, "0") : "" %>" name="birthday" type="date" class="outline-0 focus:ring-2 focus:ring-violet-400 text-violet-300 w-ful text-sm p-1 rounded-lg text-center hover:bg-white/80 transition-all hover:text-violet-400"/>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="flex flex-col lg:flex-row mt-3 gap-3 px-5 transition-all">
        <div class="bg-white grow rounded-xl py-2 px-5">
          <p
            class="text-transparent bg-clip-text bg-gradient-to-r from-violet-400 to-pink-400 font-bold text-xl mb-3"
          >
            Personal Details
          </p>

          <div class="ml-3">
            <p class="font-semibold text-neutral-500">Hobbies</p>
              <textarea name="hobbies" id="" class="h-28 text-sm font-medium text-neutral-500/80 hover:text-violet-500 transition-all bg-violet-100/50 px-2 py-1 rounded-md active:bg-violet-200/80 hover:bg-violet-100/80 outline-0 focus:ring-2 focus:ring-violet-300"><% for (let i = 0; i < friend.hobbies.length; i++) { const element = friend.hobbies[i];%><%= element %><% if(i < friend.hobbies.length-1){ %>, <% } %>
<%}%></textarea>
            <p class="font-semibold text-neutral-500 mt-3">Dream</p>
            <input 
            name="dream"
            value="<%= friend.dream%>"
              class="text-sm font-medium text-neutral-500/80 hover:text-violet-500 transition-all bg-violet-100/50 px-1 rounded-md active:bg-violet-200/80 hover:bg-violet-100/80 outline-0 focus:ring-2 focus:ring-violet-300"
            />
              
            
            <div class="flex mb-3">
              <div class="basis-1/2">
                <p class="font-semibold text-neutral-500 mt-3 b">Likes</p>
                <textarea name="likes" id="" class="h-28 text-sm font-medium text-neutral-500/80 hover:text-violet-500 transition-all bg-violet-100/50 px-2 py-1 rounded-md active:bg-violet-200/80 hover:bg-violet-100/80 outline-0 focus:ring-2 focus:ring-violet-300"><% for (let i = 0; i < friend.likes.length; i++) { const element = friend.likes[i];%><%= element %><% if(i < friend.likes.length-1){ %>, <% } %>
<%}%></textarea>
              </div>
              <div class="basis-1/2">
                <p class="font-semibold text-neutral-500 mt-3">Dislikes</p>
                <textarea name="dislikes" id="" class="h-28 text-sm font-medium text-neutral-500/80 hover:text-violet-500 transition-all bg-violet-100/50 px-2 py-1 rounded-md active:bg-violet-200/80 hover:bg-violet-100/80 outline-0 focus:ring-2 focus:ring-violet-300"><% for (let i = 0; i < friend.dislikes.length; i++) { const element = friend.dislikes[i];%><%= element %><% if(i < friend.dislikes.length-1){ %>, <% } %>
<%}%></textarea>
              </div>
            </div>
          </div>
        </div>

        <div class="flex gap-3 flex-col 2xl:flex-row xl:flex-col lg:flex-row">
          
          <div class="bg-white rounded-xl py-2 px-5 h-fit basis-1/2">
            <p
              class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-yellow-400 font-bold text-xl mb-3"
            >
              Contact Info
            </p>
            <div class="ml-3">
              <p class="font-semibold text-neutral-500 mt-3">Contact Number</p>
              <p
                class="text-sm font-medium text-neutral-500/80 flex items-center gap-1 hover:text-orange-500 transition-all"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  class="size-4 inline"
                >
                  <path
                    fill-rule="evenodd"
                    d="m3.855 7.286 1.067-.534a1 1 0 0 0 .542-1.046l-.44-2.858A1 1 0 0 0 4.036 2H3a1 1 0 0 0-1 1v2c0 .709.082 1.4.238 2.062a9.012 9.012 0 0 0 6.7 6.7A9.024 9.024 0 0 0 11 14h2a1 1 0 0 0 1-1v-1.036a1 1 0 0 0-.848-.988l-2.858-.44a1 1 0 0 0-1.046.542l-.534 1.067a7.52 7.52 0 0 1-4.86-4.859Z"
                    clip-rule="evenodd"
                  />
                </svg>
                <input
                  name="contact"
                  value="<%= friend.contact_number%>"
                  class="text-sm w-72 max-w-80 font-medium  text-neutral-500/80 hover:text-orange-500 transition-all bg-orange-100/50 px-1 rounded-md active:bg-orange-200/80 hover:bg-orange-100/80 outline-0 focus:ring-2 focus:ring-orange-300"
                />
              </p>
              <p class="font-semibold text-neutral-500 mt-3">Email</p>
              <p
                class="text-sm font-medium text-neutral-500/80 flex items-center gap-1 hover:text-orange-500 transition-all"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  class="size-4"
                >
                  <path
                    fill-rule="evenodd"
                    d="M11.89 4.111a5.5 5.5 0 1 0 0 7.778.75.75 0 1 1 1.06 1.061A7 7 0 1 1 15 8a2.5 2.5 0 0 1-4.083 1.935A3.5 3.5 0 1 1 11.5 8a1 1 0 0 0 2 0 5.48 5.48 0 0 0-1.61-3.889ZM10 8a2 2 0 1 0-4 0 2 2 0 0 0 4 0Z"
                    clip-rule="evenodd"
                  />
                </svg>
  
                <input
                  name="email"
                  value="<%= friend.email%>"
                  class="text-sm  w-72 max-w-80 font-medium text-neutral-500/80 hover:text-orange-500 transition-all bg-orange-100/50 px-1 rounded-md active:bg-orange-200/80 hover:bg-orange-100/80 outline-0 focus:ring-2 focus:ring-orange-300"
                />
  
              </p>
              <p class="font-semibold text-neutral-500 mt-3">Address</p>
              <p
                class="text-sm font-medium text-neutral-500/80 flex items-start gap-1 mb-3 hover:text-orange-500 transition-all"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  class="size-4 mt-0.5"
                >
                  <path
                    d="M8.543 2.232a.75.75 0 0 0-1.085 0l-5.25 5.5A.75.75 0 0 0 2.75 9H4v4a1 1 0 0 0 1 1h1a1 1 0 0 0 1-1v-1a1 1 0 1 1 2 0v1a1 1 0 0 0 1 1h1a1 1 0 0 0 1-1V9h1.25a.75.75 0 0 0 .543-1.268l-5.25-5.5Z"
                  />
                </svg>
  
                <input
                  name="address"
                  value="<%= friend.address %>"
                  class="text-sm w-72 max-w-80 font-medium text-neutral-500/80 hover:text-orange-500 transition-all bg-orange-100/50 px-1 rounded-md active:bg-orange-200/80 hover:bg-orange-100/80 outline-0 focus:ring-2 focus:ring-orange-300"
                />
  
              </p>
            </div>
          </div>
          <div class="shrink py-2 px-5 bg-white rounded-xl h-fit  transition-all group  basis-1/2 w-full">
            <p
              class="text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-red-400 font-bold text-xl w-fit mb-1"
            >
              Notes
            </p>
            <textarea name="notes" class="w-full font-medium h-28 group-hover:shadow-md group-hover:shadow-pink-400/30  transition-all text-pink-400 bg-pink-100 rounded-lg p-2 text-sm mb-2  "><%= friend.notes %></textarea></div>
          </div>
        </div>

    </form>

    
  </body>
</html>
